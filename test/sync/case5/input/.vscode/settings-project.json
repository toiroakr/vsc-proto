{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.encoding": "utf8",
  "typescript": {
    "format": {
      "indentSize": 2,
      "convertTabsToSpaces": true,
      "semicolons": "insert",
      "tabSize": 2
    },
    "preferences": {
      "quoteStyle": "single",
      "importModuleSpecifier": "relative"
    },
    "suggest": {
      "completeFunctionCalls": false,
      "autoImports": true,
      "enabled": true,
      "snippets": {
        "enabled": true
      }
    },
    "updateImportsOnFileMove": {
      "enabled": "always"
    }
  },
  "javascript": {
    "format": {
      "indentSize": 2,
      "convertTabsToSpaces": true,
      "semicolons": "insert"
    },
    "preferences": {
      "quoteStyle": "single",
      "importModuleSpecifier": "relative"
    }
  }
}
